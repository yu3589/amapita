<footer class="fixed bottom-0 w-full px-4 py-4 z-[9999]">
  <div class="dock bg-base-200 dock-xs md:dock-lg border-t border-base-300">
    <%= link_to posts_path, class: "flex flex-col items-center justify-center leading-none" do %>
      <span class="p-2 rounded-full md:hover:bg-[var(--color-base-400)]">
      <%= image_tag "footer/house.svg", class: "h-8 w-8" %>
      </span>
    <% end %>

    <%= link_to "#", class: "flex flex-col items-center justify-center leading-none opacity-60" do %>
      <span class="p-2 rounded-full">
      <%= image_tag "footer/magnifying_glass.svg", class: "h-8 w-8" %>
      </span>
    <% end %>

    <%= link_to products_path, class: "flex flex-col items-center" do %>
      <span class="p-2 rounded-full md:hover:bg-[var(--color-base-400)]">
      <%= image_tag "footer/plus_circle.svg", class: "icon-size" %>
      </span>
    <% end %>

   <%= link_to "#", class: "flex flex-col items-center justify-center leading-none opacity-60" do %>
      <span class="p-2 rounded-full">
      <%= image_tag "footer/bell.svg", class: "h-8 w-8" %>
      </span>
    <% end %>

    <%= link_to "#", class: "flex flex-col items-center justify-center leading-none opacity-60" do %>
      <span class="p-2 rounded-full">
      <%= image_tag "footer/user_circle.svg", class: "h-8 w-8 md:h-9 md:w-9" %>
      </span>
    <% end %>
  </div>
</footer>