<div class="p-2">
  <div class="flex flex-col flex-grow items-center">
    <div class="relative inline-block">
      <%= image_tag 'logo.webp', class: "w-65 sm:w-auto" %>
    </div>
    <div class="flex flex-col items-center pt-4 md:pt-8 text-sm sm:text-2xl text-center font-noto font-bold text-stone-600/90">
      <p class="py-0.5 sm:py-1 border-b-1 sm:border-b-2 border-solid border-stone-500/70 inline-block pb-1 w-fit">
        <%= t('static_pages.top.main_message') %></p>
      <p class="py-0.5 sm:py-1 border-b-1 sm:border-b-2 border-solid border-stone-500/70 inline-block pb-1 w-fit">
        <%= t('static_pages.top.sub_message') %></p>
    </div>
  </div>
</div>

<div class="pt-6 md:p-6">
<!-- Slider main container -->
  <div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <div class="swiper-slide bg-base-100 rounded-4xl"><%= render "top_overview" %></div>
      <div class="swiper-slide bg-base-100 rounded-4xl"><%= render "top_amapita_explanation" %></div>
      <div class="swiper-slide bg-base-100 rounded-4xl"><%= render "top_diagnosis_guide" %></div>
    </div>
    <!--  navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>