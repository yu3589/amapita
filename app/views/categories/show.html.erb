<div class="p-1 md:p-4">
  <div class="flex flex-col p-1 items-center justify-center w-full max-w-3xl mx-auto bg-base-100 rounded-4xl">
    <h1 class="text-center text-lg md:text-xl p-2 md:p-4 border-b border-base-200 w-full">
      <%= t('.title') %>
    </h1>

    <%= render 'search_form', q: @q %>

    <% unless user_signed_in? %>
      <div class="text-xs sm:text-sm text-stone-400 pb-2">
        ※ <%= t('defaults.require_login_user_rating') %>
      </div>
    <% end %>

    <% if @products.present? %>
      <% @products.each do |product| %>
        <div class="w-full border-b border-stone-300 last:border-b-0 mb-4">
          <div class="flex flex-row items-center p-1 sm:px-10">
            <!-- 画像 -->
            <figure x-data="{ imageLoaded: false }"
                    x-init="imageLoaded = $el.querySelector('img')?.complete || false">
              <div x-cloak x-show="!imageLoaded" class="flex animate-pulse space-x-4">
                <div class="p-1 sm:py-4 sm:px-8">
                  <div class="size-25 sm:size-30 rounded-xl bg-base-200"></div>
                </div>
              </div>

              <div x-show="imageLoaded" x-transition>
                <div class="p-1 sm:py-4 sm:px-8">
                  <%= product.decorate.product_image(
                        class: "size-25 sm:size-30",
                        "@load" => "imageLoaded = true",
                        "@error" => "imageLoaded = true"
                      ) %>
                </div>
              </div>
            </figure>

            <div class="relative flex-1 w-full flex flex-col items-center sm:items-start gap-2 sm:gap-4 p-2">
              <!-- 商品名・メーカー名 -->
              <div class="sm:py-1 w-full">
                <div class="flex justify-between items-center w-full">
                  <p class="text-xs sm:text-sm text-base-300 text-center sm:text-left py-1">
                    <%= product.manufacturer %>
                  </p>

                  <% if user_signed_in? %>
                    <div class="absolute top-1 sm:top-4 right-1 sm:right-14 flex-shrink-0">
                      <%= render 'products/bookmark_buttons', { product: product } %>
                    </div>
                  <% end %>
                </div>

                <%= product_link_or_tooltip(@category, product, class: "hover:opacity-70 w-full") do %>
                  <p class="text-base sm:text-xl font-semibold text-center sm:text-left pt-3">
                    <%= product.name %>
                  </p>
                  <div class="absolute top-16 right-1 hidden xl:block">
                    <span class="gap-1">
                      <%= image_tag "arrow.svg", class: "h-6 w-6 ml-1" %>
                    </span>
                  </div>
                <% end %>
              </div>

              <!-- あまピタカウント -->
              <% stats = @product_stats&.dig(product.id) || { total_posts: 0, perfect_sweetness_count: 0 } %>

              <% if stats[:total_posts].positive? %>
                <!-- 評価あり -->
                <div class="py-1">
                  <div class="flex flex-col sm:flex-row items-center gap-1 w-fit justify-center sm:justify-start amapita-count-ring ring-primary">
                    <%= image_tag "smiley-wink.svg", class: "h-7 w-7 sm:h-8 sm:w-8" %>
                    <p class="text-sm sm:text-base pb-1 items-center">
                      <%= t("defaults.label.stats", count: stats[:total_posts], perfect: stats[:perfect_sweetness_count]) %>
                    </p>
                  </div>
                </div>
              <% else %>
                <!-- 評価なし -->
                <div class="p-0.5">
                  <div class="flex flex-col sm:flex-row items-center gap-1 w-fit justify-center sm:justify-start amapita-count-ring ring-base-200">
                    <%= image_tag "smiley-blank.svg", class: "h-7 w-7 sm:h-8 sm:w-8" %>
                    <p class="text-sm sm:text-base">
                      <%= raw t('defaults.label.no_rating') %>
                    </p>
                  </div>

                  <% if show_new_post_button?(product) %>
                    <div class="mt-4 text-center">
                      <%= link_to new_post_path(product_id: product.id),
                                  class: "bg-success rounded-full px-3 py-1 sm:px-4 py-3
                                          inline-flex items-center shadow-sm transition hover-animation" do %>
                        <span class="text-xs sm:text-sm">
                          <%= t('defaults.buttons.new_post') %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- ページネーション -->
      <div class="flex items-center justify-center p-4">
        <%== pagy_nav(@pagy) %>
      </div>

    <% else %>
      <p class="p-4 text-center text-neutral flex items-center justify-center gap-2">
        <%= t('.product_not_found') %>
        <%= image_tag "smiley-x-eyes.svg", class: "h-8 w-8" %>
      </p>
    <% end %>

    <!-- 商品登録リンク -->
    <div class="m-6 sm:m-8 text-center">
      <%= new_product_link_or_tooltip(class: "bg-success rounded-full px-4 py-3 sm:px-6 
                          inline-flex items-center gap-3 shadow-sm transition hover-animation") do %>
        <%= image_tag "smiley-wink.svg", class: "h-8 w-8 sm:h-9 sm:w-9" %>
        <span class="text-xs sm:text-sm">
          <%= raw t('.product_register_suggestion') %>
        </span>
      <% end %>
    </div>
  </div>
</div>
