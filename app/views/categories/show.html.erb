<div class="p-1 md:p-4">
  <div class="flex flex-col p-2 items-center justify-center max-w-3xl mx-auto bg-base-100 rounded-4xl">
    <h1 class="text-center text-md md:text-2xl p-4 border-b border-base-200 w-full">
      <%= t('.title') %>
    </h1>

    <%= render 'search_form', q: @q %>

    <% if @products.present? %>
      <% @products.each do |product| %>
        <div class="w-full border-b border-base-200 last:border-b-0 sm:max-w-3xl">
          
            <div class="flex flex-row items-center sm:items-start p-1 sm:px-10">
              <!-- 画像 -->
              <figure class="p-1 sm:py-4 px-8">
                <%= product.decorate.product_image(class: "w-25 h-25 sm:w-30 sm:h-30",
                    alt: product.name) %>
              </figure>

              <div class="relative flex-1 w-full flex flex-col items-start gap-2 sm:gap-4 p-2">

                <!-- 商品名・メーカー名 -->
                <%= product_link_or_tooltip(@category, product, class: "hover:opacity-70 w-full") do %>
                  <div class="sm:py-1">
                    <p class="text-xs sm:text-sm text-base-300 text-center sm:text-left py-1">
                      <%= product.manufacturer %>
                    </p>
                    <p class="text-sm sm:text-xl font-semibold text-center sm:text-left pt-3">
                      <%= product.name %>
                    </p>
                    <div class="absolute top-18 right-1 hidden sm:block">
                      <span class="gap-1">
                        <%= image_tag "arrow.svg", class: "h-6 w-6 ml-1" %>
                      </span>
                    </div>
                  </div>
                <% end %>

                <% stats = @product_stats&.dig(product.id) || { total_posts: 0, perfect_sweetness_count: 0 } %>

                <% if stats[:total_posts].positive? %>
                  <!-- 評価あり -->
                  <div class="py-1">
                    <div class="flex flex-col sm:flex-row items-center gap-1 w-fit justify-center 
                                sm:justify-start amapita-count-ring ring-primary">
                      <%= image_tag "smiley-wink.svg", class: "h-8 w-8" %>
                      <p class="text-sm sm:text-base pb-1 items-center">
                        <%= t("defaults.label.stats", count: stats[:total_posts], perfect: stats[:perfect_sweetness_count]) %>
                      </p>
                    </div>
                  </div>
                <% else %>
                  <!-- 評価なし -->
                  <div class="p-0.5">
                    <div class="flex flex-col sm:flex-row items-center gap-1 w-fit justify-center 
                                sm:justify-start amapita-count-ring ring-base-200">
                      <%= image_tag "smiley-blank.svg", class: "h-8 w-8" %>
                      <p class="text-sm sm:text-base pb-1">
                        <%= raw t('defaults.label.no_rating') %>
                      </p>
                    </div>

                    <% if show_new_post_button?(product) %>
                      <div class="mt-4 text-center">
                        <%= link_to new_post_path(product_id: product.id),
                                    class: "bg-success rounded-full px-3 py-1 sm:px-4 py-3
                                            inline-flex items-center shadow-sm transition hover-animation" do %>
                          <span class="text-xs sm:text-sm">
                            <%= t('defaults.buttons.new_post') %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>


      <div class="flex justify-center pt-6 sm:pt-8">
        <%== pagy_nav(@pagy) %>
      </div>

    <% else %>
      <div class="flex flex-row text-center items-center justify-center text-neutral gap-1">
        <%= t('.product_not_found') %>
        <%= image_tag "smiley-x-eyes.svg", class: "h-8 w-8" %>
      </div>
    <% end %>

    <!-- 商品登録&投稿画面へ遷移 -->
    <div class="m-6 sm:m-8 text-center">
      <%= new_product_link_or_tooltip(class: "bg-success rounded-full px-4 py-3 sm:px-6 
                          inline-flex items-center gap-3 shadow-sm transition hover-animation") do %>
      <%= image_tag "smiley-wink.svg", class: "h-9 w-9" %>
      <span class="text-xs sm:text-sm">
        <%= raw t('.product_register_suggestion') %>
      </span>
    <% end %>

    </div>
  </div>
</div>
