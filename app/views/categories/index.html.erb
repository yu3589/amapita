<div class="p-1 md:p-4">
  <div class="flex flex-col p-2 lg:p-4 items-center justify-center w-full max-w-3xl mx-auto bg-base-100 rounded-4xl">
    <h1 class="text-center text-lg md:text-xl p-2 md:p-4 border-b border-base-200 w-full">
      <%= t('.title') %>
    </h1>

    <%= render 'products/search_form', q: @q, category: nil %>

    <p class="text-base sm:text-lg sm:pb-2">
      <%= t('.search_category') %>
    </p>
    <div class="py-5 pt-4 pb-18 sm:pb-8">
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-8 md:gap-9 items-center justify-center">
        <%= category_card(category: "gummy-jelly", name: t('categories.gummy'), subname: t('categories.jelly')) %>
        <%= category_card(category: "chocolate", name: t('categories.chocolate')) %>
        <%= category_card(category: "cookie-biscuit", name: t('categories.cookie')) %>
        <%= category_card(category: "bread-doughnut", name: t('categories.doughnut')) %>
        <%= category_card(category: "ice-cream", name: t('categories.ice_cream')) %>
        <%= category_card(category: "drink", name: t('categories.drink')) %>
        <%= category_card(category: "cake", name: t('categories.cake')) %>
        <%= category_card(category: "snack", name: t('categories.snack')) %>
        <%= category_card(category: "other", name: t('categories.other'), extra_class: "col-span-2 sm:col-span-1") %>
      </div>
    </div>
  </div>
</div>

<!-- 新規商品登録 -->
<div class="fixed bottom-18 left-0 right-0 sm:left-auto sm:right-1 2xl:right-45 sm:bottom-20 px-2 sm:px-0 z-5 flex justify-center sm:block">
  <%= new_product_link_or_tooltip(class: "w-fit sm:w-auto bg-accent sm:bg-accent/80 hover:bg-accent rounded-full p-3
                      shadow-lg hover:shadow-xl transition-all duration-300 transform sm:hover:scale-103
                      flex items-center justify-center gap-1 sm:gap-2") do %>
    <%= image_tag "smiley-wink.svg", class: "h-7 w-7 sm:h-8 sm:w-8" %>
    <span class="text-sm text-center">
      <%= raw t('defaults.link.product_register_suggestion') %> 
    </span>
  <% end %>
</div>